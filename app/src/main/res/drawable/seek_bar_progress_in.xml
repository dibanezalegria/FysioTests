<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:radius="0dp" />
            <gradient
                android:angle="270"
                android:startColor="#33000000"
                android:centerColor="#11000000"
                android:endColor="#11000000"
                android:centerY="0.5"
                android:type="linear"
                />
            <stroke
                android:width="8dp"
                android:color="@color/background_in" />

        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="-90"
                    android:endColor="@color/indigo_500"
                    android:startColor="@color/indigo_400" />
                <corners android:radius="0dp" />
                <stroke
                    android:width="8dp"
                    android:color="@color/background_in" />
            </shape>
        </clip>
    </item>
</layer-list>