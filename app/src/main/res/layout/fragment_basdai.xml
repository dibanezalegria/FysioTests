            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Lätt"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Omöjligt"
                android:textAppearance="?android:textAppearanceMedium"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/basdai_q5"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basdai_margin_questions"
            android:text="@string/basdai_q5"/>

        <!-- SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <SeekBar
                android:id="@+id/basdai_slider5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar_progress_in"
                android:thumb="@drawable/seekbar_thumb_states"/>
        </LinearLayout>

        <!-- Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
