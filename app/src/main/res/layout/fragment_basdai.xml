            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basdai_margin_questions"
            android:text="@string/basdai_q4"/>

        <!-- SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <SeekBar
                android:id="@+id/basdai_slider4"
