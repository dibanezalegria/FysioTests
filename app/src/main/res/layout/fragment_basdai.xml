<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_in"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            tools:context="com.pbluedotsoft.fysio.TestActivity">

    <LinearLayout
        android:id="@+id/basdai_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="60dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <TextView
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/basdai_markera"/>

        <TextView
            android:id="@+id/basdai_q1"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basdai_margin_questions"
            android:text="@string/basdai_q1"/>

        <!-- SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <SeekBar
                android:id="@+id/basdai_slider1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar_progress_in"
                android:thumb="@drawable/seekbar_thumb_states"/>
        </LinearLayout>

        <!-- Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Lätt"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Omöjligt"
                android:textAppearance="?android:textAppearanceMedium"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/basdai_q2"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basdai_margin_questions"
            android:text="@string/basdai_q2"/>

        <!-- SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <SeekBar
                android:id="@+id/basdai_slider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar_progress_in"
                android:thumb="@drawable/seekbar_thumb_states"/>
        </LinearLayout>

        <!-- Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Lätt"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Omöjligt"
                android:textAppearance="?android:textAppearanceMedium"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/basdai_q3"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basdai_margin_questions"
            android:text="@string/basdai_q3"/>

        <!-- SeekBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <SeekBar
                android:id="@+id/basdai_slider3"
