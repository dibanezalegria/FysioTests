                android:layout_height="wrap_content"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar_progress_in"
                android:thumb="@drawable/seekbar_thumb_states"/>
        </LinearLayout>

        <!-- Labels -->
        <LinearLayout
            android:layout_width="match_parent"
